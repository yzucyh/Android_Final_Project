<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1E0D6"
    tools:context=".mainscreen">

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_11"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="41dp"
        android:layout_weight="1"
        android:backgroundTint="#67221D"
        android:text="飲食紀錄"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/usershow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button10"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usershow"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:text="準備好開始你的健康旅程了嗎?"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/button9"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:scaleType="centerCrop"

            app:srcCompat="@drawable/target2" />

        <ImageButton
            android:id="@+id/button7"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/note15" />

        <ImageButton
            android:id="@+id/button8"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/menu6" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/image_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_marginTop="120dp"

            app:srcCompat="@drawable/homephoto" />

    </LinearLayout>




</RelativeLayout>